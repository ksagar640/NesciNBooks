	<% include ./Partials/header.ejs %>
<div class="header">
  <div class="progress-container">
    <div class="progress-bar" id="myBar"></div>
  </div> 
</div>
		<div class="cartbtn">
		<a href="/cart"class="ui huge button blue">
				  Go To Cart <i class="fa fa-chevron-right" aria-hidden="true"></i>
		</a>
		</div>
<div class="container">
<h1> Get Every Book Here!!!</h1>
	  	<div class="allBooks">
	  		<%book.forEach(function(item){ %>
	  		<div class="eachbook" id="bookid<%=item.id%>">
		  			<h3> Title :<%=item.title%> ,</h3>
		  			<h4> Author :<%=item.author%>,</h4>	
		  			<h4> Publisher :<%=item.publisher%>, <h4>
		  			<h4> Semester :<%=item.semester%>, </h4>
		  			<p> Price :<%=item.price%>, </p>
	  				<%if (item.count>0) { %>
		  			<h4> Available status 	: Yes Available </h4>
		  			<%}%>
		  			<% if (item.count<=0) { %>
		  			<h4> Available status 	: Not Available </h4>
		  			<%}%>
		  			 <a class="ui secondary button" href="/add-to-cart/<%=item.id%>">Add To Cart<i class="fa fa-cart-arrow-down" aria-hidden="true"></i></a>
		  	</div>
		  	<%});%>	
	  		
	  	</div>
